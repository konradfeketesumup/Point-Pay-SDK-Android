<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/light_grey</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionBarTheme">@style/PaylevenActionBarTheme</item>
        <item name="actionBarStyle">@style/PaylevenActionBar</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:textViewStyle">@style/RegularTextViewStyle</item>
        <item name="colorControlNormal">@color/grey_separator</item>
        <!-- Color of the action bar menu options-->
        <item name="android:actionMenuTextColor">@color/blue</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionBarTabTextStyle">@style/MenuTextAppearance</item>
        <item name="actionMenuTextColor">@color/blue</item>
        <item name="android:windowContentOverlay">@color/grey_separator</item>
        <!-- =================================== -->
    </style>

    <style name="PaylevenActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="colorControlNormal">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PaylevenActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/PaylevenTitleTextStyle</item>
    </style>

    <style name="PaylevenTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="MenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="RegularTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="LightTextViewStyle">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="GreyText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultButton">
        <item name="android:textColor">@drawable/default_text_color_selector</item>
        <item name="android:background">@drawable/default_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="WhiteButton">
        <item name="android:textColor">@color/blue</item>
        <item name="android:background">@drawable/white_button_selector</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SuccessLabelText">
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="CancelledLabelText">
        <item name="android:textColor">@color/dark_pink</item>
    </style>

    <style name="TerminalListLabel">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/default_margin_doubled</item>
        <item name="android:layout_marginLeft">@dimen/left_margin</item>
        <item name="android:layout_marginStart">@dimen/left_margin</item>
    </style>

    <style name="NumberPadButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="CurrencyDialogItemStyle">
        <item name="android:paddingTop">@dimen/default_margin</item>
        <item name="android:paddingBottom">@dimen/default_margin</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/alert_dialog_colors</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/home_icon_padding</item>
        <item name="android:paddingLeft">@dimen/home_icon_padding</item>
        <item name="android:paddingTop">@dimen/home_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/home_item_vertical_padding</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="HomeSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_separator</item>
        <item name="android:layout_marginLeft">@dimen/left_margin_complete</item>
        <item name="android:layout_marginStart">@dimen/left_margin_complete</item>
    </style>

</resources>
