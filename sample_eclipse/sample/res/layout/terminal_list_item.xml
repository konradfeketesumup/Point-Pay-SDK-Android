<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/terminal_icon_image"
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icn_cnp_terminal_not_paired"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/row_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey"
            android:layout_marginLeft="@dimen/default_margin_doubled"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/default_margin_doubled"
                android:layout_marginRight="@dimen/default_margin_doubled"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/default_margin_doubled"
                android:paddingTop="@dimen/default_margin_doubled"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/tick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/icn_tick"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/light_grey"
            android:layout_marginLeft="@dimen/default_margin_doubled"/>

    </LinearLayout>
</LinearLayout>